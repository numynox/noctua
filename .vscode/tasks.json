{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Website",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/app"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": [],
            "dependsOn": [
                "Summarize (AI)"
            ]
        },
        {
            "label": "Dev Server",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "dev"
            ],
            "options": {
                "cwd": "${workspaceFolder}/app"
            },
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "Supabase",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "supabase:start"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "Supabase Functions",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "supabase:functions:serve"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "Fetch RSS",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "set -a; [ -f ./.env ] && . ./.env; set +a; if [ -z \"${FETCH_RSS_INVOKE_SECRET:-}\" ]; then echo \"FETCH_RSS_INVOKE_SECRET is not set (.env or environment)\"; exit 1; fi; curl -L -X POST \"http://127.0.0.1:54321/functions/v1/fetch-rss\" -H \"Authorization: Bearer ${FETCH_RSS_INVOKE_SECRET}\" -H \"Content-Type: application/json\" --data \"{\\\"name\\\":\\\"Functions\\\"}\""
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        }
    ]
}