{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Download Feeds",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "python",
                "-m",
                "workflow.download.main"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Filter Feeds",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "python",
                "-m",
                "workflow.filter.main"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [],
            "dependsOn": [
                "Download Feeds"
            ]
        },
        {
            "label": "Summarize (AI)",
            "type": "shell",
            "command": "node",
            "args": [
                "workflow/summarize/index.js"
            ],
            "options": {
                "env": {
                    "GEMINI_API_KEY": "${env:GEMINI_API_KEY}"
                }
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [],
            "dependsOn": [
                "Filter Feeds"
            ]
        },
        {
            "label": "Build Website",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/app"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [],
            "dependsOn": [
                "Summarize (AI)"
            ]
        },
        {
            "label": "Dev Server",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "dev"
            ],
            "options": {
                "cwd": "${workspaceFolder}/app"
            },
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
                    "file": 1,
                    "location": 2,
                    "severity": 3,
                    "code": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "Local:.*http://localhost:\\d+"
                }
            }
        },
        {
            "label": "Run Full Pipeline",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "workflow:all"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "install:all"
            ],
            "group": "none",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Install Python Dependencies",
            "type": "shell",
            "command": "uv",
            "args": [
                "sync"
            ],
            "group": "none",
            "presentation": {
                "reveal": "always"
            }
        }
    ]
}