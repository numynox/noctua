{
    "editor.formatOnSave": true,
    "editor.wordWrap": "on",
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // Astro
    "[astro]": {
        "editor.defaultFormatter": "astro-build.astro-vscode"
    },
    // Svelte
    "[svelte]": {
        "editor.defaultFormatter": "svelte.svelte-vscode"
    },
    // File associations
    "files.associations": {
        "*.yaml": "yaml",
        "*.yml": "yaml"
    },
    // Explorer exclude
    "files.exclude": {
        "**/node_modules": true,
        "**/__pycache__": true,
        "**/.astro/**": true,
        "supabase/.branches": true,
        "supabase/.temp": true
    },
    // Exclude from file watcher
    "files.watcherExclude": {
        "**/.venv/**": true,
        "**/node_modules/**": true,
        "**/output/**": true,
        "supabase/.branches": true,
        "supabase/.temp": true
    },
    // Search exclude
    "search.exclude": {
        "**/.venv": true,
        "**/node_modules": true,
        "**/output": true,
        "supabase/.branches": true,
        "supabase/.temp": true
    },
    "VsCodeTaskButtons.tasks": [
        {
            "label": "Build Website",
            "task": "Build Website",
        },
        {
            "label": "Dev Server",
            "task": "Dev Server",
            "color": "warning"
        },
        {
            "label": "Supabase",
            "task": "Supabase",
            "color": "error"
        },
        {
            "label": "Supabase Functions",
            "task": "Supabase Functions",
            "color": "error"
        },
        {
            "label": "Fetch RSS",
            "task": "Fetch RSS"
        }
    ]
}