{
  "name": "noctua",
  "version": "0.1.0",
  "description": "AI-powered RSS feed aggregator with intelligent summarization",
  "type": "module",
  "private": true,
  "workspaces": [
    "workflow/summarize",
    "app"
  ],
  "scripts": {
    "download": "uv run python -m workflow.download.main",
    "filter": "uv run python -m workflow.filter.main",
    "summarize": "node workflow/summarize/index.js",
    "build:website": "cd app && npm run build",
    "dev:website": "cd app && npm run dev",
    "preview:website": "cd app && npm run preview",
    "workflow:all": "npm run download && npm run filter && npm run summarize && npm run build:website",
    "install:all": "npm install",
    "supabase:login": "npx supabase login",
    "supabase:status": "npx supabase status",
    "supabase:projects:list": "npx supabase projects list",
    "supabase:link": "npx supabase link",
    "supabase:start": "npx supabase start",
    "supabase:stop": "npx supabase stop",
    "supabase:functions:serve": "npx supabase functions serve",
    "supabase:functions:list": "npx supabase functions list",
    "supabase:functions:deploy": "npx supabase functions deploy"
  },
  "keywords": [
    "rss",
    "feed",
    "aggregator",
    "ai",
    "summarization",
    "astro"
  ],
  "license": "AGPL-3.0-only",
  "engines": {
    "node": ">=20.0.0"
  }
}
