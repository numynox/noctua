---
import Sidebar from "../components/Sidebar.svelte";
import { loadFeedData, getBaseUrl, loadConfig } from "../lib/data";
import "../styles/app.css";

interface Props {
  title: string;
  description?: string;
  activeId?: string;
}

const baseUrl = getBaseUrl();
const config = loadConfig();
const data = loadFeedData();

const siteTitle = config?.settings?.website?.title || "Noctua";
const siteDescription =
  config?.settings?.website?.description || "An RSS feed reader.";
const { title, description = siteDescription, activeId } = Astro.props;
const resetMinutesCfg = config?.settings?.website?.reset_time_minutes || 30;
const themeColor = "#242933";
---

<!doctype html>
<html
  lang="en"
  data-theme="dark"
  data-base-url={baseUrl}
  data-reset-minutes={resetMinutesCfg}
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <title>{title} | {siteTitle}</title>

    <link rel="icon" type="image/x-icon" href={baseUrl + "/favicon.ico"} />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href={baseUrl + "/favicon-32x32.png"}
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href={baseUrl + "/favicon-16x16.png"}
    />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href={baseUrl + "/apple-touch-icon.png"}
    />
    <link rel="manifest" href={baseUrl + "/manifest.webmanifest"} />
    <meta name="theme-color" content={themeColor} />

    <!-- Theme initialization script (prevents flash) -->
    <script is:inline>
      (function () {
        const theme = localStorage.getItem("noctua_theme");
        const prefersDark = window.matchMedia(
          "(prefers-color-scheme: dark)",
        ).matches;

        let actualTheme = "dark";
        if (theme && theme !== '"auto"') {
          actualTheme = JSON.parse(theme);
        } else if (!prefersDark) {
          actualTheme = "light";
        }

        document.documentElement.setAttribute("data-theme", actualTheme);
      })();
    </script>
    <!-- Disable scroll restoration and start auto-refresh timer -->
    <script is:inline>
      (function () {
        // Disable automatic scroll restoration which interferes with article
        // hide/seen logic. Some browsers may not support this property.
        try {
          if (
            typeof history !== "undefined" &&
            "scrollRestoration" in history
          ) {
            history.scrollRestoration = "manual";
          }
        } catch (e) {
          // ignore
        }

        // Auto-refresh: reload the page after `resetMinutes` minutes since
        // last page load or last article read. The `markAsRead` function in
        // storage.ts dispatches a `noctua:activity` event to reset this timer.
        const resetMinutes = Number(
          (typeof document !== "undefined" &&
            document.documentElement.dataset.resetMinutes) ||
            0,
        );

        if (!resetMinutes) return;

        let timerId = null;

        function scheduleReload() {
          if (timerId) {
            clearTimeout(timerId);
          }
          const ms = Number(resetMinutes) * 60 * 1000;
          if (!ms || ms <= 0) return;
          timerId = setTimeout(() => {
            try {
              // Use replace to avoid adding an extra history entry; add a
              // timestamp query param to help bypass caches.
              const url = new URL(window.location.href);
              url.searchParams.set("_noctua_reload", String(Date.now()));
              window.location.replace(url.toString());
            } catch (e) {
              // fallback to simple reload
              window.location.reload();
            }
          }, ms);
        }

        // Start timer on load
        scheduleReload();

        // Reset timer when user marks an article read; storage.ts dispatches
        // this event on activity.
        window.addEventListener("noctua:activity", () => {
          scheduleReload();
        });

        // Clean up when unloading
        window.addEventListener("beforeunload", () => {
          if (timerId) clearTimeout(timerId);
        });
      })();
    </script>

    <script is:inline>
      (function () {
        if (
          "serviceWorker" in navigator &&
          window.location.protocol !== "file:"
        ) {
          window.addEventListener("load", function () {
            try {
              navigator.serviceWorker
                .register(document.documentElement.dataset.baseUrl + "/sw.js")
                .catch((e) => {
                  console.error("Service worker registration failed:", e);
                });
            } catch (e) {
              console.error("Service worker registration failed:", e);
            }
          });
        }
      })();
    </script>
  </head>
  <body class="bg-base-100 text-base-content overflow-x-hidden">
    <div class="flex min-h-screen">
      <!-- Sidebar -->
      <Sidebar
        sections={data.sections}
        activeId={activeId}
        processedAt={data.processed_at}
        baseUrl={baseUrl}
        client:load
      />

      <!-- Main Content Area -->
      <div class="flex-1 flex flex-col min-w-0">
        <!-- Page Content -->
        <main class="flex-1 p-6 lg:p-8">
          <slot />
        </main>
      </div>
    </div>
  </body>
</html>
