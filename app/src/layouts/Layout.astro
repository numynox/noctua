---
import Sidebar from "../components/Sidebar.svelte";
import {
  getArticleFetchLimit,
  getBaseUrl,
  getStatisticsHeatmapWeeks,
  getStatisticsWeeks,
  getWebsiteDescription,
  getWebsiteTitle,
} from "../lib/config";
import "../styles/app.css";

interface Props {
  title?: string;
  description?: string;
  activeId?: string;
}

const baseUrl = getBaseUrl();
const siteTitle = getWebsiteTitle();
const siteDescription = getWebsiteDescription();
const articleFetchLimit = getArticleFetchLimit();
const statisticsWeeks = getStatisticsWeeks();
const statisticsHeatmapWeeks = getStatisticsHeatmapWeeks();
const { title = "", description = siteDescription, activeId } = Astro.props;
const themeColor = "#242933";
---

<!doctype html>
<html
  lang="en"
  data-theme="dark"
  data-base-url={baseUrl}
  data-site-title={siteTitle}
  data-article-fetch-limit={String(articleFetchLimit)}
  data-statistics-weeks={String(statisticsWeeks)}
  data-statistics-heatmap-weeks={String(statisticsHeatmapWeeks)}
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <title>{title ? `${title} | ${siteTitle}` : siteTitle}</title>

    <link rel="icon" type="image/x-icon" href={baseUrl + "/favicon.ico"} />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href={baseUrl + "/favicon-32x32.png"}
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href={baseUrl + "/favicon-16x16.png"}
    />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href={baseUrl + "/apple-touch-icon.png"}
    />
    <link rel="manifest" href={baseUrl + "/manifest.webmanifest"} />
    <meta name="theme-color" content={themeColor} />

    <!-- Theme initialization script (prevents flash) -->
    <script is:inline>
      (function () {
        const theme = localStorage.getItem("noctua_theme");
        const prefersDark = window.matchMedia(
          "(prefers-color-scheme: dark)",
        ).matches;

        let actualTheme = "dark";
        if (theme && theme !== '"auto"') {
          actualTheme = JSON.parse(theme);
        } else if (!prefersDark) {
          actualTheme = "light";
        }

        document.documentElement.setAttribute("data-theme", actualTheme);
      })();
    </script>
    <!-- Disable scroll restoration -->
    <script is:inline>
      (function () {
        // Disable automatic scroll restoration which interferes with article
        // hide/seen logic. Some browsers may not support this property.
        try {
          if (
            typeof history !== "undefined" &&
            "scrollRestoration" in history
          ) {
            history.scrollRestoration = "manual";
          }
        } catch (e) {
          // ignore
        }
      })();
    </script>

    <script is:inline>
      (function () {
        if (
          "serviceWorker" in navigator &&
          window.location.protocol !== "file:"
        ) {
          window.addEventListener("load", function () {
            try {
              navigator.serviceWorker
                .register(document.documentElement.dataset.baseUrl + "/sw.js")
                .catch((e) => {
                  console.error("Service worker registration failed:", e);
                });
            } catch (e) {
              console.error("Service worker registration failed:", e);
            }
          });
        }
      })();
    </script>
  </head>
  <body class="bg-base-100 text-base-content overflow-x-hidden">
    <div class="flex min-h-screen">
      <!-- Sidebar -->
      <Sidebar
        activeId={activeId}
        baseUrl={baseUrl}
        siteTitle={siteTitle}
        client:load
      />

      <!-- Main Content Area -->
      <div class="flex-1 flex flex-col min-w-0">
        <!-- Page Content -->
        <main class="flex-1 p-4 md:p-6 lg:p-8">
          <slot />
        </main>
      </div>
    </div>
  </body>
</html>
